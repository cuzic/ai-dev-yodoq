{
  "name": "ai-dev-yodoq",
  "version": "1.0.0",
  "description": "AI活用開発セミナー：生産性を劇的に向上させる体系的アプローチ",
  "private": true,
  "scripts": {
    "build": "npm run build:pdf && npm run build:html",
    "build:pdf": "marp slides/*.md --pdf --allow-local-files -o build/",
    "build:html": "marp slides/*.md --html --allow-local-files -o build/",
    "build:pptx": "marp slides/*.md --pptx --allow-local-files -o build/",
    "preview": "marp -s slides/",
    "watch": "marp -w slides/day1_1.md"
  },
  "keywords": [
    "marp",
    "presentation",
    "slides",
    "ai",
    "development",
    "seminar"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@marp-team/marp-cli": "^4.0.0"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  }
}
